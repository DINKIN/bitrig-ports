+bool OS::ArmCpuHasFeature(CpuFeature feature) {
+  switch (feature) {
+    case VFP2:
+    case VFP3:
+    case ARMv7:
+      return true;
+    case SUDIV:
+      /* XXX: unsure about this. */
+      return false;
+    default:
+      UNREACHABLE();
+  }
+
+  return false;
+}
+
+CpuImplementer OS::GetCpuImplementer() {
+  /* FIXME: As of now we believe we're ARM only. */
+  return ARM_IMPLEMENTER;
+}
 
